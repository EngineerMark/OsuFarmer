<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OsuFarmer.TrackerOptionControl"
             HeightRequest="40">
    <ContentView.Content>
        <HorizontalStackLayout>
            <Switch VerticalOptions="CenterAndExpand" x:Name="ToggleElement" IsToggled="{Binding IsToggled}" />
            <Label VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" x:Name="TitleElement" HorizontalOptions="Start" Text="{Binding Title}"></Label>
        </HorizontalStackLayout>
    </ContentView.Content>
</ContentView>