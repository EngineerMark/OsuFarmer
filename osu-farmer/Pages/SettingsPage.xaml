<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="osu_farmer.SettingsPage"
             Title="Settings"
             BackgroundColor="{DynamicResource OsuRegular}">
    <StackLayout Spacing="10" Margin="20">
        <Entry x:Name="settingsApiKey" Placeholder="osu! api key" />
        <BoxView HorizontalOptions="CenterAndExpand" HeightRequest="2" Color="{DynamicResource OsuDark}" />
        <ScrollView MaximumHeightRequest="400">
            <StackLayout Spacing="5">
                <Button Text="Save" />
                <Button Text="Save" />
                <Button Text="Save" />
                <Button Text="Save" />
                <Button Text="Save" />
            </StackLayout>
        </ScrollView>

        <Grid ColumnSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button GridLayout.Column="0" Text="Save" />
            <Button GridLayout.Column="1" Text="Reset" />
        </Grid>
    </StackLayout>
</ContentPage>