<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="osu_farmer.TrackerItemControl">
    <ContentView.Content>
        <Grid ColumnSpacing="10" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" x:Name="TitleElement" HorizontalOptions="End" VerticalOptions="Center" Text="Example Stat"></Label>
            <Entry Grid.Column="1" x:Name="CurrentValueElement" Text="20" IsReadOnly="True"/>
            <Entry Grid.Column="2" x:Name="ChangedValueElement" Text="+10" TextColor="Green" IsReadOnly="True"/>
            <Label Grid.Column="3" HorizontalOptions="End" VerticalOptions="Center" Text=""></Label>

        </Grid>
    </ContentView.Content>
</ContentView>